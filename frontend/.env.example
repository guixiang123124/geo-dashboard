# GEO Insights Frontend - Environment Configuration
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env.local
# 2. Update the API URL to match your backend deployment
# 3. Never commit .env.local to Git (it's in .gitignore)
# =============================================================================

# Backend API URL
# Development:
NEXT_PUBLIC_API_URL=http://localhost:8000

# Production (examples):
# NEXT_PUBLIC_API_URL=https://geo-insights-api.railway.app
# NEXT_PUBLIC_API_URL=https://geo-insights-api.onrender.com
# NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Default Workspace ID (for demo/development)
NEXT_PUBLIC_DEFAULT_WORKSPACE_ID=ws-demo-001

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
