# GEO Attribution Dashboard - Environment Template
#
# INSTRUCTIONS:
# 1. Copy this file to create your local .env files:
#    - backend/.env
#    - frontend/.env.local
# 2. Replace all <REPLACE_ME> values with your actual credentials
# 3. NEVER commit the actual .env files to Git

# ============================================
# BACKEND Configuration (backend/.env)
# ============================================

# Application
APP_NAME=GEO Attribution Dashboard API
APP_VERSION=1.0.0
DEBUG=True

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./geo_dashboard.db

# AI API Keys (REPLACE WITH YOUR KEYS)
OPENAI_API_KEY=<REPLACE_ME_WITH_YOUR_OPENAI_KEY>
GOOGLE_API_KEY=<REPLACE_ME_WITH_YOUR_GEMINI_KEY>
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

# AI Model Configuration
# Options:
# - gpt-4o: $3.60/600 calls (RECOMMENDED - best quality/price ratio)
# - gpt-3.5-turbo: $0.60/600 calls (CHEAPEST - good enough for GEO)
# - gpt-4-turbo-preview: $12/600 calls (EXPENSIVE - not recommended)
OPENAI_MODEL=gpt-4o
GOOGLE_MODEL=gemini-pro
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Rate Limiting
AI_REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Evaluation
DEFAULT_INTENT_POOL_PATH=data/intent_pool.json
DEFAULT_BRANDS_PATH=data/brands_database.json
MAX_CONCURRENT_EVALUATIONS=5

# ============================================
# FRONTEND Configuration (frontend/.env.local)
# ============================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Default Workspace ID (REPLACE WITH YOUR WORKSPACE ID)
NEXT_PUBLIC_DEFAULT_WORKSPACE_ID=<REPLACE_ME_WITH_YOUR_WORKSPACE_ID>

# Feature Flags
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# ============================================
# CLOUD DEPLOYMENT (DO NOT COPY TO .env FILES)
# These are set in Vercel/Render dashboards
# ============================================

# Vercel Frontend:
# - NEXT_PUBLIC_API_URL=https://your-backend.onrender.com
# - NEXT_PUBLIC_DEFAULT_WORKSPACE_ID=<production-workspace-id>

# Render Backend:
# - DATABASE_URL=<postgresql-url-from-render>
# - OPENAI_API_KEY=<your-key>
# - GOOGLE_API_KEY=<your-key>
# - All other settings same as above
